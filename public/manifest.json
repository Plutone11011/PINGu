{

  "manifest_version": 2,
  "name": "PINGu",
  "version": "1.0",

  "description": "Pings visited website and computes RTT",

  "icons": {
    "48": "logo192.png"
  },

  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "Ping",
    "default_popup": "index.html"
  },


  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["borderify.js"]
    }
  ]

}
